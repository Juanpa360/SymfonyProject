{% extends 'base.html.twig' %}

{% block title %} New Post {% endblock %}

{% block body %} 
<div class="container">
<h1 class="mt-4 mb-3"> New Post</h1>
<div class="row">
    <div class="md-col-8">  
        {{form_errors(form)}}
        {{form_start(form)}}
            <div class="control-group form-group">
                {{ form_label(form.titulo) }}
                {{ form_errors(form.titulo) }}
                {{ form_widget(form.titulo) }}
            </div>
             <div class="control-group form-group" hidden>
                {{ form_label(form.autor) }}
                {{ form_errors(form.autor) }}
                {{ form_widget(form.autor,{'value':app.user.username}) }}
            </div>
             <div class="control-group form-group">
                {{ form_label(form.descripcion) }}
                {{ form_errors(form.descripcion) }}
                {{ form_widget(form.descripcion) }}
            </div>
        <div>
            {{form_widget(form)}}
        </div>
        {{form_end(form)}}
    </div> 
</div>
</div>
 {% endblock %}

