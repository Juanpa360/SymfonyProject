{% extends 'base.html.twig' %}


{% block body %}
 <!-- Product section-->
        <section class="py-5">
            <div class="container px-4 px-lg-5 my-5">
                <div class="row gx-4 gx-lg-5 align-items-center">
                    <div class="col-md-6">
                        {% if error %}
                            <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                        {% endif %}
                        <form action="{{ path('login') }}" method="post">
                            <label for="username">Username:</label>
                            <input type="text" id="username" name="_username" value="{{last_username}}"/>

                            <br><label for="password">Password: </label>
                            <input type="password" id="password" name="_password"/>
                            <br><br><button type="submit">login</button>
                        </form>
                    </div>
                    <div class="col-md-6">
                      
                        <h1 class="display-5 fw-bolder">Log in</h1>
                        <div class="fs-5 mb-5">
                        </div>
                        <p class="lead">By continuing, you are setting up a WebBlog account and agree to our user agreement and privacy policy.</p>
                        <br><p>If you have not registered yet, click on the <a href="{{path('register')}}">Sign Up</a> link</p>
                    </div>
                </div>
            </div>
        </section>

{% endblock %}